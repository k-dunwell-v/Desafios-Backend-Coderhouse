doctype html
html 
    head
        title="Test"
        link(rel="stylesheet", href="/styles.css")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")

    body
                    
        div(class="products")
            h1(style="color:black")="Productos de prueba"

            div(id="cardRow")

                if products
                    each product in products
                        div(class="card")
                            img(src=product["thumbnail"] || "https://i.ibb.co/6nDS7nX/goose.jpg" style="width:100%")
                            h2=product["title"]
                            h3(class="price")="$" + product["price"]

//- ///////////////////// ESTILOS /////////////////////

if !form
    style(type="text/css").
        body {
            display: block;
        }
        
        .products {
            background-color: white;
            width: 100%;
            text-align: center 
        }
        
        .card {
            width: 15%;
        }
        
        @media screen and (max-width: 600px) {

            .main, .products{
                padding: 0px;
                width: 100%;
                background-color: white
            }

            #cardRow {
                margin: 15px;
                display: block;
            }

            .card {
                width: 90%;
            }
            
        }